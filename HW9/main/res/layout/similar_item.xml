<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/similar_layout"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/similar_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/similar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/similar_image"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:textSize="19dp"
                android:lineSpacingMultiplier="0.8"
                android:textAlignment="center"
                android:text="titletitletitletitletitletitletitletitletitletitletitletitle"/>

            <TextView
                android:id="@+id/similar_ship"
                android:layout_below="@+id/similar_title"
                android:layout_toRightOf="@+id/similar_image"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Shipping" />

            <TextView
                android:id="@+id/similar_days"
                android:layout_below="@+id/similar_title"
                android:layout_toRightOf="@+id/similar_ship"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days Left" />

            <TextView
                android:id="@+id/similar_price"
                android:layout_below="@+id/similar_ship"
                android:layout_toRightOf="@+id/similar_image"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="145dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="$" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>