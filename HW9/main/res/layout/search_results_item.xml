<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="365dp"
    android:layout_margin="3dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="190dp"
        android:layout_height="360dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_image"
                android:layout_margin="5dp"
                android:text="titletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitle"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/item_zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/item_ship"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="zip"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_ship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="45dp"
                android:text="shipping"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/add_wish_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@id/item_condition"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="45dp" />

            <TextView
                android:id="@+id/item_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="5dp"
                android:maxWidth="100dp"
                android:text="condition"
                android:textColor="@color/less"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="11dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="cost"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>